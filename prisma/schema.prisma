generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement()) @map("user_id")
  username String @unique @db.VarChar(20)
  password String
  mainNode Node?

  @@map("users")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Node {
  nodeId Int    @id @default(autoincrement()) @map("node_id")
  name   String @db.VarChar(15)

  type     NodeType      
  fileLink String?        @map("file_link")
  link     NodeShareLink?

  userId Int?  @unique @map("user_id")
  user   User? @relation(fields: [userId], references: [userId], onDelete: Cascade)

  parentNodeId Int?   @map("parent_node_id")
  parentNode   Node?  @relation("ParentNodeChildNode", fields: [parentNodeId], references: [nodeId], onDelete: Cascade)
  childNode    Node[] @relation("ParentNodeChildNode")

  @@map("nodes")
}

model NodeShareLink {
  linkId       Int    @id @default(autoincrement()) @map("link_id")
  link         String
  sharedNode   Node   @relation(fields: [sharedNodeId], references: [nodeId])
  sharedNodeId Int    @unique @map("shared_node_id")

  @@map("node_share_links")
}

enum NodeType {
  FILE
  FOLDER
}
